    constructor(
        string memory name,
        string memory symbol,
        uint8 decimals,
        uint256 initialSupply
    )
        ERC20Pausable()
        ERC20Burnable()
        ERC20Detailed(name, symbol, decimals)
        ERC20()
        public
    {
        _mint(msg.sender, initialSupply);
    }

